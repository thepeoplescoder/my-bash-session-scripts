#
# Use this file instead of ~/.bash_functions
#

function start_functions() {
	unset -f "$FUNCNAME"

	__enter_this_file__
	main_functions
	__leave_this_file__
}

function main_functions() {
	unset -f "$FUNCNAME"
	__bash_sessionstart_notify__ "Entering"; echo
	define_your_functions_inside_this_function
	__bash_sessionstart_notify__ "Leaving"; echo
}

function define_your_functions_inside_this_function() {
	unset -f "$FUNCNAME"
	# Define your functions starting here
}

start_functions