####################################
##                                ##
##   Script Names and Locations   ##
##                                ##
####################################

unset_on_exit STARTING_SCRIPTS ADDITIONAL_SCRIPTS_DIRECTORY ENDING_SCRIPTS

# These get loaded first.
STARTING_SCRIPTS=("functions" "aliases")

# Then any script in this directory gets loaded.
ADDITIONAL_SCRIPTS_DIRECTORY="bashrc.d"

# Finally, these scripts are loaded.
ENDING_SCRIPTS=("terminal_prompt")