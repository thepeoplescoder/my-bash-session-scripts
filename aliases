#
# Use this file instead of ~/.bash_aliases
#

# Keep track of where we are
__enter_this_file__

# Let user know we're in here
__bash_sessionstart_notify__ "Entering"; echo

# Some useful aliases, and others for color
alias ls='LC_COLLATE=C ls --group-directories-first --color=auto'
alias grep='grep --color=auto'
alias sudo='sudo '
alias ip='ip -color=auto'
alias diff='diff --color=auto'
alias mvv='mv -v'
alias cpv='cp -v'
alias cd..='cd ..'

_push_indent

__theme__ highlight
if command_exists 'pacman'; then
	alias pacman='pacman --color=auto '
	iecho -n "pacman "
	echo     "$(__theme__ normal)detected."
elif command_exists 'apt'; then
	alias apt-get='apt'
	iecho -n "apt "
	echo     "$(__theme__ normal)detected."
	if ! command_exists 'nala'; then
		iecho "Consider installing nala!"
	fi
fi
__ansi__ reset

_pop_indent

# Let user know we're leaving
__bash_sessionstart_notify__ "Leaving"; echo

# Restore the name of the current file to the script that sourced this one
__leave_this_file__
